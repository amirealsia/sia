{
  // Notion 확장프로그램 설정
  "notion.workspaceId": "Am I Real Sia Workspace",

  // Notion API 설정 (환경변수에서 읽음)
  "notion.token": "${env:NOTION_API_KEY}",

  // 프로젝트 관련 설정
  "files.exclude": {
    "**/.git": true,
    "**/.env": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },

  // Python 설정
  "python.defaultInterpreterPath": "python",
  "python.analysis.typeCheckingMode": "basic",

  // 자동 저장
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // 인코딩 설정 (한글 지원)
  "files.encoding": "utf8",
  "files.eol": "\n",

  // Git 설정
  "git.autofetch": true,
  "git.confirmSync": false,

  // 터미널 인코딩
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8"
  }
}
